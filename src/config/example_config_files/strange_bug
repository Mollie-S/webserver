server {
	listen 80;
	server_name irem;
	server_name webservvvvv;
	root /var/www/localhost;
	return 301 https://$server_name$request_uri;
}

server {
	listen 2000;
	location /wordpress/ {
		root /var/www/localhost;
		limit_except POST {
			deny all;
		}
	}

	location /wordpress/ {
		return 301 https://localhost;
		limit_except POST GET DELETE{
			deny all;
		}
	}

	location / {
		autoindex on;
		return 505 https://$server_name$request_uri;
	}
}
